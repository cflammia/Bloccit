- if policy(Vote.new).create?
  .pull-left.vote-arrows
    %div= link_to " ",
      post_up_vote_path(post),
        class: up_vote_link_classes(post), method: :post
    %div
      %strong= post.points
    %div= link_to " ",
      post_down_vote_path(post),
      class: down_vote_link_classes(post), method: :post
