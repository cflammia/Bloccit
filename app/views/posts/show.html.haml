%h1
  = image_tag(@post.image.thumb.url) if @post.image?
  = markdown @post.title
.row
  .col-md-8
    %small
      = image_tag(@post.user.avatar.tiny.url) if @post.user.avatar?
      submitted #{time_ago_in_words(@post.created_at)} ago by
      \#{@post.user.name}
    %p= markdown @post.body
  .col-md-4
    - if policy(@post).edit?
      = link_to "Edit", edit_topic_post_path(@topic,@post), class: 'btn btn-success'
  - if policy(@post).destroy?
    = link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' }
.row
  .col-md-4
    = render partial: 'comments/comment', locals: {comments: @comments}
.row
  .col-md-4
    - if current_user
      = render partial: 'comments/form', locals: {topic: @topic, post: @post}
    - else
      #{link_to "Sign in", new_user_session_path} to comment
